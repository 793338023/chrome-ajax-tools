{
  "name": "Ajax Tools",
  "version": "1.0",
  "description": "modify response text of ajax requests",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "optional_host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_icon": "./icons/tools.png",
    "default_popup": "./html/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "./content.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "html/sidebar.html",
        "html/iframePage/dist/index.html",
        "pageScripts/index.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
